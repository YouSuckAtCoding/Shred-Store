<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShredStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShredStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark bg-gradient border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="ShredStore" asp-action="Index">ShredStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" asp-area="" asp-controller="ShredStore" asp-action="Index">Home</a>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Categories
                  </a>
                  <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item text-light" href="#">Guitars</a></li>
                    <li><a class="dropdown-item text-light" href="#">Pedals</a></li>
                    <li><a class="dropdown-item text-light" href="#">Amps</a></li>
                    <li><a class="dropdown-item text-light" href="#">Accessories</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-light" href="#">Other</a></li>
                  </ul>
                </li>
                  
              </ul>
              <div class="d-flex">
                    <a class="nav-link text-light" href="#">Login</a>
              </div>
              
              
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark bg-gradient">
        <div class="container d-flex flex-row justify-content-center">
            <a class="nav-link text-light" asp-area="" asp-controller="ShredStore" asp-action="Privacy">2022 ₢ Shred Store</a>
            <a class="nav-link text-light" asp-area="" asp-controller="ShredStore" asp-action="Privacy">Privacy</a>
            <a class="nav-link text-light" asp-area="" asp-controller="ShredStore" asp-action="Privacy">About Us</a>
            <a class="nav-link text-light" asp-area="" asp-controller="ShredStore" asp-action="Privacy">Contact Us</a>
            <a class="nav-link text-light" asp-area="" asp-controller="ShredStore" asp-action="Privacy">Work For Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
