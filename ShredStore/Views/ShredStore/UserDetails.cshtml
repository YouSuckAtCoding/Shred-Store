@model UserViewModel
@{
    Layout = "~/Views/Shared/SecondaryLayout.cshtml";
    ViewData["Title"] = "User Details";
}

<div class="d-flex justify-content-evenly border border-dark rounded mt-5 mb-5" id="IndexMain">
    <div class="d-flex justify-content-center flex-column ms-5 me-5">
            <div class="mt-3 mb-3">
                <h2 class="text-light">User Details</h2>
            </div>
            <div class="mt-3 mb-3">
                <h3 class="text-light">Name: @Model.Name</h3>
            </div>
            <div class="mt-3 mb-3">
                <h3 class="text-light">Email: @Model.Email</h3>
            </div>
            <div class="mt-3 mb-3">
                <h3 class="text-light">Role: @Model.Role</h3>
            </div>
    </div>
    <div class="d-flex justify-content-center flex-column ms-5 me-5">
        <a class="btn btn-outline-light mt-3 mb-3" asp-area="" asp-controller="UserOperations" asp-action="EditUser">Edit User Detalis</a>
        <a class="btn btn-outline-light mt-3 mb-3" asp-area="" asp-controller="UserOperations" asp-action="DeleteUser">Delete Account</a>
    </div>
    
</div>