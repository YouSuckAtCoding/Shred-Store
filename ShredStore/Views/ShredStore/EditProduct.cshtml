@model ProductViewModel

@{
    Layout = config.GetValue<string>("PageLayouts:SecondaryLayout");
    ViewData["Title"] = "Edit " + @Model.Name;
}

<div class="d-flex justify-content-center flex-column">
        <h2 class="text-light">Publish Your Product \m/!</h2>
                <form asp-action="EditProduct" enctype="multipart/form-data">
                    <input type="hidden" asp-for="UserId" value=@Accessor.HttpContext.Session.GetInt32("_Id")/>
                    <input type="hidden" asp-for="ImageName" value=@Model.ImageName/>
                    <input type="hidden" asp-for="Id" value=@Model.Id/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group ms-2 me-2 mb-3 mt-3">
                        <label asp-for="Name" class="control-label text-light"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group ms-2 me-2 mb-3 mt-3">
                        <label asp-for="Price" class="control-label text-light"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group ms-2 me-2 mb-3 mt-3">
                        <label asp-for="Description" class="control-label text-light"></label>
                        <textarea asp-for="Description" class="form-control" rows="6" wrap="soft">
                            
                        </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group ms-2 me-2 mb-3 mt-3">
                        <label asp-for="Category" class="control-label text-light"></label>
                        <select asp-for="Category" class="form-select dropdown-toggle" asp-items="ViewBag.Categories"></select>
                    </div>
                     <div class="form-group ms-2 me-2 mb-3 mt-3">
                        <label asp-for="ImageFile" class="control-label text-light"></label>
                        <input type="file" asp-for="ImageFile" accept="image/*"/>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 mt-3">
                        <input type="submit" value="Publish Your Product!" class="btn btn-outline-light" />
                    </div>
                </form>
    </div>