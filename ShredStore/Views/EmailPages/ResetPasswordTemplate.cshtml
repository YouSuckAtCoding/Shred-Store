@model ShredStore.Models.UserResetPasswordViewModel

<div class="d-flex justify-content-center align-items-center bg-secondary bg-gradient">
<div class="text-center border border-dark rounded mt-5 mb-5 w-50" id="IndexMain">
    <h2 class="text-light">Password Reset Email</h2>
        <div class="form-group mb-3 mt-3">
           <a class="text-light h3">@(Model.Email) Thanks for contacting us!</a>
        </div>
        <div class="form-group mb-3 mt-3">
           <a class="text-light">Here is your new password. Please change it to your preference as soon as you can.</a>
        </div>
        <div class="form-group mb-3 mt-3">
           <a class="text-light fw-bold">@(Model.Password)</a>
        </div>        
</div>
</div>
