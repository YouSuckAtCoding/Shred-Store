
@{
    Layout = config.GetValue<string>("PageLayouts:SecondaryLayout");
    ViewData["Title"] = "Reset Password";
}

<div class="text-center border border-dark rounded mt-5 mb-5 w-50" id="IndexMain">
    <h2 class="text-light">Reset your Password</h2>
    <form asp-action="PasswordReset" class="d-flex justify-content-center flex-column ms-5 me-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-3 mb-3">
             <label for="Email" class="control-label text-light">Please insert your email.</label>
             <input required name="Email" class="form-control" />
        </div>
        <div class="form-group mb-3 mt-3">
             <a class="text-light text-decoration-none" asp-controller="UserOperations" id="hoverLink" asp-action="CreateAccount">Create a Account!</a>
        </div>
        <div class="form-group mb-3 mt-3">
             <input type="submit" value="Reset Password" class="btn btn-outline-light" />
        </div>
        @if(ViewBag.Message != null)
        {
             <script type="text/javascript">
                window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
        }
    </form>    
</div>
