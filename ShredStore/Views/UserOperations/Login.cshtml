@model UserLoginViewModel

@{
    Layout = config.GetValue<string>("PageLayouts:SecondaryLayout");
    ViewData["Title"] = "Login";
}

<div class="text-center border border-dark rounded mt-5 mb-5 w-50" id="IndexMain">
    <h2 class="text-light">Login</h2>
    <form asp-action="Login" class="d-flex justify-content-center flex-column ms-5 me-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Name" class="control-label text-light"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Password" class="control-label text-light"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
                <a class="text-light text-decoration-none" asp-controller="UserOperations" id="hoverLink" asp-action="PasswordReset">Forgot your Password?</a>
            </div>
            <div class="form-group mb-3 mt-3">
                <a class="text-light text-decoration-none" asp-controller="UserOperations" id="hoverLink" asp-action="CreateAccount">Create a Account!</a>
            </div>
            <div class="form-group mb-3 mt-3">
                <input type="submit" value="Login" class="btn btn-outline-light" />
            </div>
        @if(ViewBag.Message != null)
        {
             <script type="text/javascript">
                window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
        }
    </form>
    

    
</div>
